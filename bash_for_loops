# bash cookbook

for i in 1 2 3; do echo $i; done

for (( i =0; i < 10; i++ )); do echo $i; done

>for (( i=0,j=0; i+j < 10; i++, j++ )); do echo $(( i * j )); done

# floating points
for fp in $(seq 1.0 0.01 1.1); do echo $fp; done`

>seq 1.0 0.01 1.1 | while read fp; do echo $fp; done

