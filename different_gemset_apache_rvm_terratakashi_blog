<VirtualHost *:80>
    ServerName helloworld.tw
    ServerAlias www.helloworld.tw
    DocumentRoot /var/www/localhost/htdocs/helloworld
    PassengerAppRoot /home/railsapp/helloworld
    PassengerRuby /usr/local/rvm/wrappers/ruby-2.0.0-p247@mygemset/ruby
</VirtualHost> 
